<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.janetdo.toomapp.IncidentActivity">>

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/green_rectangle"></ImageView>

    <TextView
        android:id="@+id/introText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        android:text="Mängel melden"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/incidentText"
        android:layout_width="800dp"
        android:layout_height="80dp"
        android:layout_below="@+id/introText"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="30dp"
        android:text="Haben Sie einen Missstand, Mängel oder ein anderes Problem im Geschäft bemerkt? Bitte schildern Sie dieses Problem kurz:"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <EditText
        android:id="@+id/incidentTextField"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/incidentText"
        android:layout_marginLeft="50dp"
        android:ems="15"
        android:inputType="textPersonName"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/sendIncident"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/incidentTextField"
        android:layout_marginLeft="440dp"
        android:background="@drawable/green_rectangle"
        android:onClick="sendIncident"
        android:layout_marginTop="20dp"
        android:text="Senden"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="15dp" />

</RelativeLayout>